{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@routes/*": ["src/routes/*"],
        "@utils/*": ["src/utils/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  